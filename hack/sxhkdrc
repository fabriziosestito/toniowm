# make sxhkd reload its configuration files
super + Escape
        pkill -USR1 -x sxhkd

# terminal emulator
super + Return
    wezterm

# program launcher
super + d
        rofi -modi drun,run -show drun

# close window
super + shift + q
    cargo run client close

# focus closest window
super + {Left,Down,Up,Right}
    cargo run client focus --closest {west,south,north,east}

# focus cycle
alt + Tab
    cargo run client focus --cycle next

alt + shift + Tab
    cargo run client focus --cycle prev

# activate workspace
super + {1-5}
    cargo run client activate-workspace --index {0-4}

